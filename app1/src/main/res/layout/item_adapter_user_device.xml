<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_10px_dp">

        <ImageView
            android:id="@+id/item_user_device_iv_image"
            android:layout_width="@dimen/_76px_dp"
            android:layout_height="@dimen/_76px_dp"
            android:scaleType="center" />

        <View
            android:layout_width="@dimen/_20px_dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_5px_dp">

            <TextView
                android:id="@+id/item_user_device_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_16px_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5px_dp" />

            <TextView
                android:id="@+id/item_user_device_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/_13px_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5px_dp" />

            <TextView
                android:id="@+id/item_user_device_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/_13px_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5px_dp" />

            <TextView
                android:id="@+id/item_user_device_tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/_13px_sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_user_device_iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/image_widget_right_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px_dp"
        android:background="@color/theme_gray" />
</LinearLayout>